;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module engine_param
   (import  tools_date)
   (export  *cgc-version*
	    *cgc-name*
	    *cgc-level*
	    *cgc-author*
	    *cgc-email*
	    *cgc-date*
	    *cgc-tmp*
	    *verbose*
	    *src*
	    *dest*
	    *optim*
	    *rest-args*
	    *target*
	    *pass-stop*
	    *register-allocator*
	    *rts*
	    *inner-functions*
	    *display-move-mem-length?*
	    *text-only?*))
 
;*---------------------------------------------------------------------*/
;*    compiler and author names ...                                    */
;*---------------------------------------------------------------------*/
(define *cgc-version*   "0.2")
(define *cgc-name*      (string-append "Cgc (v" *cgc-version* ")"))
(define *cgc-level*     #f)
(define *cgc-author*    "Manuel Serrano")
(define *cgc-email*     "Manuel.Serrano@unice.fr")
(define *cgc-date*      (cgc-date))
(define *cgc-tmp*       (let ((Venv (getenv "TMPDIR")))
			     (if (string? Venv)
				 Venv
				 "/tmp")))

;*---------------------------------------------------------------------*/
;*    Compiler controls                                                */
;*---------------------------------------------------------------------*/
(define *verbose*         0)

;*---------------------------------------------------------------------*/
;*    The optimization level                                           */
;*---------------------------------------------------------------------*/
(define *optim*           0)

;*---------------------------------------------------------------------*/
;*    file names                                                       */
;*---------------------------------------------------------------------*/
(define *src*             #unspecified)
(define *c-dest*          #f)
(define *dest*            #f)

;*---------------------------------------------------------------------*/
;*    Unparsed arguments ...                                           */
;*---------------------------------------------------------------------*/
(define *rest-args*       '())

;*---------------------------------------------------------------------*/
;*    The target for which we compile                                  */
;*---------------------------------------------------------------------*/
(define *target*          'mips-r3000)

;*---------------------------------------------------------------------*/
;*    Where do we stop in the compilation process                      */
;*---------------------------------------------------------------------*/
(define *pass-stop*       #unspecified)

;*---------------------------------------------------------------------*/
;*    The register allocator                                           */
;*---------------------------------------------------------------------*/
(define *register-allocator* 'agaig)

;*---------------------------------------------------------------------*/
;*    Does the produced code embed its runtime code ?                  */
;*---------------------------------------------------------------------*/
(define *rts* #f)

;*---------------------------------------------------------------------*/
;*    Support for inner function in the compiler?                      */
;*---------------------------------------------------------------------*/
(define *inner-functions* #t)

;*---------------------------------------------------------------------*/
;*    Shall we display we word size when display an IR move-mem        */
;*    construction?                                                    */
;*---------------------------------------------------------------------*/
(define *display-move-mem-length?* #t)

;*---------------------------------------------------------------------*/
;*    Shall we display the only text segment                           */
;*---------------------------------------------------------------------*/
(define *text-only?* #f)
